<resources
        xmlns:tools="http://schemas.android.com/tools"
        tools:ignore="SpUsage">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FreeReading"
           parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorControlNormal</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="android:windowBackground">@color/window_background</item>

        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="toolbarBackground">@color/toolbarBackground</item>
        <item name="toolbarTextColor">@color/toolbarTextColor</item>
        <item name="toolbarMenuTint">@color/toolbarMenuTint</item>
        <item name="tabIndicatorColor">@color/tabIndicatorColor</item>
        <item name="tabBackground">@color/tabBackground</item>
        <item name="tabTextColor">@color/tabTextColor</item>
        <item name="overflowHeaderColor">@color/overflowHeaderColor</item>
        <item name="android:navigationBarColor"
              tools:targetApi="lollipop">@color/immersive_bars
        </item>
        <item name="android:windowLightStatusBar"
              tools:targetApi="m">true
        </item>
    </style>

    <style name="FreeReading.Translucent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="FreeReading.About">
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <style name="FreeReading.PopupOverlay"
           parent="ThemeOverlay.AppCompat.Light"/>

    <style name="FreeReading.AppBarOverlay"
           parent="Theme.AppCompat.Light"/>

    <style name="FreeReading.Dialog">
        <item name="android:paddingStart">@dimen/dialog_content_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/dialog_content_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/dialog_content_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/dialog_content_vertical_padding</item>
    </style>

    <style name="Widget.FreeReading"
           parent="android:Widget"/>

    <style name="Widget.FreeReading.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/line_divider</item>
    </style>

    <style name="Widget.FreeReading.WhiteCard">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Widget.FreeReading.MainPage"/>

    <style name="MainPage.WhiteCard"
           parent="Widget.FreeReading.WhiteCard"/>

    <style name="Widget.FreeReading.MainPage.Title">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.FreeReading.MainPage.CategoryTitle">
        <item name="android:layout_marginStart">@dimen/category_margin_horizontal</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>
</resources>
